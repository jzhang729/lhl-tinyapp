<!DOCTYPE html>
<html lang="en">
<head>
  <title>Tinyapp</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
</head>
<style type="text/css">

  dl {
    margin: 20px;
  }

  dt {
    font-weight: bold;
    display: inline-block;
    vertical-align: top;
    margin: 10px;
  }

  dd {
    display: inline-block;
    margin: 10px 15px;
  }

  form {
    display: inline;
    margin: 0px 5px;
  }

  input[type=submit] {
    padding: 0px;
    font-size: 1em;
    background: none;
    color: red;
    border: 0px;
  }

</style>
<body>
    <% include ./partials/_header %>

    <dl>
      <% Object.keys(urls).forEach((key) => { %>
        <dt><%= key %></dt>
          <dd>
            <%= urls[key] %>
            <form method="POST" action="/urls/<%= key %>?_method=DELETE">
              <input type="submit" value="delete" style="display:inline"/>
            </form>
          </dd>
          <br />
      <% }); %>
    </dl>
</body>
</html>
